@model List<FinSyncNexus.Models.AccountRecord>
@{
    ViewData["Title"] = "Accounts";
}

<div class="page-header page-header-left">
    <div>
        <h1>Accounts</h1>
        <p class="page-subtitle">View chart of accounts from connected platforms</p>
    </div>
    <div class="header-actions">
        @await Html.PartialAsync("_GlobalFilters", (FinSyncNexus.ViewModels.FilterViewModel)ViewBag.Filters, new ViewDataDictionary(ViewData) { ["RenderMode"] = "Button" })
        <form asp-controller="Sync" asp-action="SyncNow" method="post">
            <button class="btn btn-primary" type="submit">Refresh</button>
        </form>
    </div>
</div>

@await Html.PartialAsync("_GlobalFilters", (FinSyncNexus.ViewModels.FilterViewModel)ViewBag.Filters, new ViewDataDictionary(ViewData) { ["RenderMode"] = "Badges" })

<div class="panel">
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>Provider</th>
                <th>Name</th>
                <th>Type</th>
                <th>Code</th>
                <th>Provider</th>
            </tr>
        </thead>
        <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4" class="text-muted">No accounts available.</td>
            </tr>
        }
        else
        {
            foreach (var account in Model)
            {
                <tr>
                    <td>@account.Provider</td>
                    <td>@account.Name</td>
                    <td>@account.Type</td>
                    <td>@(account.Code ?? "-")</td>
                    <td><span class="pill-provider @(account.Provider == "QBO" ? "pill-qbo" : "pill-xero")">@account.Provider</span></td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>
