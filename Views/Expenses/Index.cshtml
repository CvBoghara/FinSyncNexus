@model List<FinSyncNexus.Models.ExpenseRecord>
@{
    ViewData["Title"] = "Expenses";
}

<div class="page-header">
    <div>
        <h1>Expenses</h1>
        <p class="page-subtitle">Track all expenses from connected accounting platforms</p>
    </div>
    <div class="header-actions">
        <form method="get" class="filter-form">
            <select name="provider" class="filter-select" onchange="this.form.submit()">
                <option value="All" selected="@(ViewBag.Provider == "All")">All Providers</option>
                <option value="Xero" selected="@(ViewBag.Provider == "Xero")">Xero</option>
                <option value="QBO" selected="@(ViewBag.Provider == "QBO")">QuickBooks</option>
            </select>
        </form>
        <form asp-controller="Sync" asp-action="SyncNow" method="post">
            <button class="btn btn-primary" type="submit">Refresh</button>
        </form>
    </div>
</div>

<div class="panel">
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Description</th>
                <th>Vendor</th>
                <th>Category</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Provider</th>
            </tr>
        </thead>
        <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="7" class="text-muted">No expenses available.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date.ToString("MMM dd, yyyy")</td>
                    <td>@item.Description</td>
                    <td>@item.VendorName</td>
                    <td>@item.Category</td>
                    <td class="amount-red">@item.Amount.ToString("C")</td>
                    <td><span class="badge badge-recorded">@item.Status.ToUpperInvariant()</span></td>
                    <td><span class="pill-provider @(item.Provider == "QBO" ? "pill-qbo" : "pill-xero")">@item.Provider</span></td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>
