@model List<FinSyncNexus.Models.InvoiceRecord>
@{
    ViewData["Title"] = "Invoices";
}

<div class="page-header page-header-left">
    <div>
        <h1>Invoices</h1>
        <p class="page-subtitle">View all invoices from connected accounting platforms</p>
    </div>
    <div class="header-actions">
        @await Html.PartialAsync("_GlobalFilters", (FinSyncNexus.ViewModels.FilterViewModel)ViewBag.Filters, new ViewDataDictionary(ViewData) { ["RenderMode"] = "Button" })
        <form asp-controller="Sync" asp-action="SyncNow" method="post">
            <button class="btn btn-primary" type="submit">Refresh</button>
        </form>
    </div>
</div>

@await Html.PartialAsync("_GlobalFilters", (FinSyncNexus.ViewModels.FilterViewModel)ViewBag.Filters, new ViewDataDictionary(ViewData) { ["RenderMode"] = "Badges" })

<div class="panel">
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Provider</th>
                <th>Invoice #</th>
                <th>Customer</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Due Date</th>
            </tr>
        </thead>
        <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="7" class="text-muted">No invoices available.</td>
            </tr>
        }
        else
        {
            foreach (var invoice in Model)
            {
                <tr>
                    <td>@invoice.CreatedAt.ToString("MMM dd, yyyy")</td>
                    <td><span class="pill-provider @(invoice.Provider == "QBO" ? "pill-qbo" : "pill-xero")">@invoice.Provider</span></td>
                    <td>@invoice.InvoiceNumber</td>
                    <td>@invoice.CustomerName</td>
                    <td>@invoice.Amount.ToString("C")</td>
                    <td><span class="badge badge-open">@invoice.Status</span></td>
                    <td>@(invoice.DueDate?.ToString("d") ?? "-")</td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>
