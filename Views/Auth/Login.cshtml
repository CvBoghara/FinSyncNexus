@model FinSyncNexus.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="auth-container">
    <div class="auth-card">
        <h1>Sign in</h1>
        <p class="page-subtitle">Use your assigned credentials to access FinSync Nexus.</p>

        @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }

        <form asp-controller="Auth" asp-action="Login" method="post" class="auth-form">
            @Html.AntiForgeryToken()
            <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />

            <label class="auth-label" for="Username">Username</label>
            <input id="Username" name="Username" class="filter-select auth-input" value="@Model.Username" />

            <label class="auth-label" for="Password">Password</label>
            <input id="Password" name="Password" type="password" class="filter-select auth-input" />

            <button type="submit" class="btn btn-primary auth-submit">Login</button>
        </form>
    </div>
</div>
