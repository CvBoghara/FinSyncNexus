@model List<FinSyncNexus.Models.CustomerRecord>
@{
    ViewData["Title"] = "Customers";
}

<div class="page-header">
    <div>
        <h1>Customers</h1>
        <p class="page-subtitle">View all customers from connected accounting platforms</p>
    </div>
    <div class="header-actions">
        <form method="get" class="filter-form">
            <select name="provider" class="filter-select" onchange="this.form.submit()">
                <option value="All" selected="@(ViewBag.Provider == "All")">All Providers</option>
                <option value="Xero" selected="@(ViewBag.Provider == "Xero")">Xero</option>
                <option value="QBO" selected="@(ViewBag.Provider == "QBO")">QuickBooks</option>
            </select>
        </form>
        <form asp-controller="Sync" asp-action="SyncNow" method="post">
            <button class="btn btn-primary" type="submit">Refresh</button>
        </form>
    </div>
</div>

<div class="panel">
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>Provider</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Provider</th>
            </tr>
        </thead>
        <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4" class="text-muted">No customers available.</td>
            </tr>
        }
        else
        {
            foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Provider</td>
                    <td>@customer.Name</td>
                    <td>@(customer.Email ?? "-")</td>
                    <td>@(customer.Phone ?? "-")</td>
                    <td><span class="pill-provider @(customer.Provider == "QBO" ? "pill-qbo" : "pill-xero")">@customer.Provider</span></td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>
