@model List<FinSyncNexus.Models.PaymentRecord>
@{
    ViewData["Title"] = "Payments";
}

<div class="page-header">
    <div>
        <h1>Payments</h1>
        <p class="page-subtitle">Track all payments from connected accounting platforms</p>
    </div>
    <div class="header-actions">
        <form method="get" class="filter-form">
            <select name="provider" class="filter-select" onchange="this.form.submit()">
                <option value="All" selected="@(ViewBag.Provider == "All")">All Providers</option>
                <option value="Xero" selected="@(ViewBag.Provider == "Xero")">Xero</option>
                <option value="QBO" selected="@(ViewBag.Provider == "QBO")">QuickBooks</option>
            </select>
        </form>
        <form asp-controller="Sync" asp-action="SyncNow" method="post">
            <button class="btn btn-primary" type="submit">Refresh</button>
        </form>
    </div>
</div>

<div class="panel">
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Customer</th>
                <th>Invoice #</th>
                <th>Amount</th>
                <th>Method</th>
                <th>Reference</th>
                <th>Provider</th>
            </tr>
        </thead>
        <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="7" class="text-muted">No payments available.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date.ToString("MMM dd, yyyy")</td>
                    <td>@item.CustomerName</td>
                    <td>@item.InvoiceNumber</td>
                    <td class="amount-green">@item.Amount.ToString("C")</td>
                    <td>@item.Method</td>
                    <td>@item.Reference</td>
                    <td><span class="pill-provider @(item.Provider == "QBO" ? "pill-qbo" : "pill-xero")">@item.Provider</span></td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>
