@model FinSyncNexus.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-brand">
            <div class="brand-badge">FN</div>
            <span>FinSync Nexus</span>
        </div>
        <h1>Create Account</h1>
        <p class="page-subtitle">Sign up to connect your accounting platforms and track financial data.</p>

        @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }

        <form asp-controller="Auth" asp-action="Register" method="post" class="auth-form">
            @Html.AntiForgeryToken()

            <div class="auth-field">
                <label class="auth-label" asp-for="FullName">Full Name</label>
                <input asp-for="FullName" class="filter-select auth-input" placeholder="John Doe" />
                <span asp-validation-for="FullName" class="text-danger auth-error"></span>
            </div>

            <div class="auth-field">
                <label class="auth-label" asp-for="Email">Email Address</label>
                <input asp-for="Email" type="email" class="filter-select auth-input" placeholder="john@example.com" />
                <span asp-validation-for="Email" class="text-danger auth-error"></span>
            </div>

            <div class="auth-field">
                <label class="auth-label" asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="filter-select auth-input" placeholder="Min. 6 characters" />
                <span asp-validation-for="Password" class="text-danger auth-error"></span>
            </div>

            <div class="auth-field">
                <label class="auth-label" asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="filter-select auth-input" placeholder="Re-enter password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger auth-error"></span>
            </div>

            <button type="submit" class="btn btn-primary auth-submit">Create Account</button>
        </form>

        <div class="auth-footer">
            Already have an account? <a asp-controller="Auth" asp-action="Login">Sign in</a>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
